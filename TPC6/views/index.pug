extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 People List #[a.w3-btn.w3-round.w3-grey(href="/people/registo") + ]
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Name
          th Idade
          th Actions

        each p in plist
          tr
            td= p._id
            td
              a(href="/people/"+p._id)= p.nome
            td
              = p.idade
            td
              button.w3-btn.w3-round.w3-indigo.w3-margin-right 
                a(href="/people/edit/"+p._id) Edit
              button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                a(href="/people/delete/"+p._id) Delete

    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d}

